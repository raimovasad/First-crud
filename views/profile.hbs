<h1>Profile</h1>


<div class="row">
    <div class="col s6">
      {{#if user.avatarUrl}}
        <img class="avatar" src="/images/{{user.avatarUrl}}" alt="profile avatar">
        {{else}}
        <p>Avatar is not exist</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile?_csrf={{csrf}}" method="POST" enctype="multipart/form-data">
        <p>Your email:  <strong>{{user.email}}</strong></p>

        <div class="input-field col s12">
          <input id="name" name="name" type="text" class="validate" required  value="{{user.name}}"/>
          <label for="name">Name</label>
          <span class="helper-text" data-error="Name is empty"></span>

        </div>

           <div class="file-field input-field">
             <div class="btn">
             <span>Avatar</span>
              <input type="file" name="avatar">
               </div>
             <div class="file-path-wrapper">
           <input class="file-path validate" type="text">
             </div>
    </div>

    <button type="submit" class="btn">Change</button>
         <input type="hidden" name="_csrf" value="{{csrf}}">
        </form>
    </div>
</div>