
  <div class="row">
   
    <div  class="col s6 offset-s3">
      {{#if logEmailError}}
      <p class="alert">{{error}}</p>
      {{/if}}
      {{#if logPassError}}
      <p class="alert">{{logPassError}}</p>
      {{/if}}


      <h1 class="join-title">Reset account</h1>
      <form class="col s12" method="POST" action="/auth/reset">

        <div class="row">

          <div class="input-field col s12">
            <input
              id="email"
              name="email"
              type="email"
              class="validate"
              required
            />
            <label for="email">Email</label>
            <span class="helper-text" data-error="Input youe email"></span>

          </div>

        
          <input type="hidden" name="_csrf" value="{{csrf}}">

        </div>
        <button type="submit" class="btn btn-primary">Reset</button>

      </form>

    </div>
    
  </div>
