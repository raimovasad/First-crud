<h1 class="clothes-title">Clothes page</h1>
{{#each clothes}}
 <div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src="{{image}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{type}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action action">
          <a href="/clothes/cloth/{{id}}">Discover</a>
         {{#if @root.isAuth}}
          <a href="/change/{{id}}">Change</a>

          <form action="/card" method="POST">
                <input type="hidden" name="id" value="{{id}}">
                 <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                <button type="submit" class="btn btn-primary purple">Acquire</button>
          </form>
         {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}